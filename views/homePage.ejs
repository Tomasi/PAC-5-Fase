<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <title>DashBoard</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
  </head>
  <body>
    <div class="header">
      <div class="center">
      </div>
    </div>
    <div class="container-banner">
      <div class="center">
        
        <div>
        <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
    
        <script>
        var xValues = ["Italy", "France", "Spain", "USA", "Argentina"];
        var yValues = [55, 49, 44, 24, 15];
        var barColors = ["red", "green","blue","orange","brown"];
        
        new Chart("myChart", {
          type: "bar",
          data: {
            labels: xValues,
            datasets: [{
              backgroundColor: barColors,
              data: yValues
            }]
          },
          options: {
            legend: {display: false},
            title: {
              display: true,
              text: "World Wine Production 2018"
            }
          }
        });
        </script>
      </div>
        <h2>Projetos <button type="button" class="button blue mobile" onclick="location.assign('/cadastrarProjeto')">+</button></h2>
        <br>
        <% projetos.forEach(function(projeto){ %>  
          <tr>
            <td colspan="4">
            <%= projeto.proj_nome %>
              <a href="/alterarProjeto/<%= projeto.proj_codigo %>">Alterar</a>
              <a href="/lancarMovimentos/<%= projeto.proj_codigo %>">Lançar Movimentos </a>
              <a href="/gerarEstratificacao/<%= projeto.proj_codigo %>">Estratificação </a>
              <br>
            </td>
          </tr>
      <% }) %>
        <div class="form">
          <h2>Integrantes <button type="button" class="button blue mobile" onclick="location.assign('/cadastrarIntegrante')">+</button></h2>
          <br>
          <td>
            <% integrantes.forEach(function(integrante){ %>  
              <tr>
                <%= integrante.int_nome %>
                <td colspan="4">
                  <a href="/alterarIntegrante/<%= integrante.int_codigo %>">Alterar</a>
                </td>
              </tr>
            <br>
          <% }) %>
          </td>
        </div>
      </div>
    </div>
  </body>
</html>
